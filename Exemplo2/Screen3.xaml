<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exemplo2.Screen3"
             Title="Example 2 - Screen 3"
             >

    <ContentPage.Content>

        <ListView x:Name="listaScreen3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout Wrap="Wrap" Direction="Row" JustifyContent="SpaceAround">
                            <Image Source="{Binding Imagem}" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding Texto}" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" />
                            <Label Text="{Binding Numero}" VerticalOptions="CenterAndExpand" HorizontalOptions="End" />
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </ContentPage.Content>
    
</ContentPage>